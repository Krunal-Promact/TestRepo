@model Restaurant
@{
    ViewBag.Title = "Edit Restaurant";
}
<form method="post" asp-controller="Restaurant" asp-action="Edit" class="form-horizontal col-md-4 col-md-offset-4" autocomplete="off">
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Name"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" placeholder="Restaurant Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Cuisine"></label>
        <div class="col-md-10">
            <select asp-for="Cuisine" asp-items="@Html.GetEnumSelectList(typeof(Cuisine))" class="form-control">
                <option>Select</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
    </div>
</form>